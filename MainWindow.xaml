<Window x:Class="Plan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plan"
        mc:Ignorable="d"
        Title="CMCS Portal - Secure Access" 
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#0A0F1C"
        Icon="pic.ico">

    <!-- Window Resources -->
    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#11998e" Offset="0"/>
            <GradientStop Color="#38ef7d" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1a1a2e" Offset="0"/>
            <GradientStop Color="#0f0f23" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Button Style -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#4A00E0" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#8B5CF6" Offset="0"/>
                                            <GradientStop Color="#A855F7" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Tab Style -->
        <Style x:Key="NavTab" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Field Style -->
        <Style x:Key="ModernInput" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#667eea"/>
                                <Setter TargetName="border" Property="Background" Value="#0F172A"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Password Field Style -->
        <Style x:Key="ModernPassword" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#667eea"/>
                                <Setter TargetName="border" Property="Background" Value="#0F172A"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#667eea" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Branding -->
        <Grid Grid.Column="0" Background="{StaticResource DarkGradient}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="60">
                <!-- Logo Area -->
                <!-- Logo Area -->
                <Grid Width="80" Height="80" Margin="0,0,0,30">
                    <Ellipse Fill="White"/>
                    <Image Source="pic.jpg" Stretch="UniformToFill">
                        <Image.Clip>
                            <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                        </Image.Clip>
                    </Image>
                    <Grid.Effect>
                        <DropShadowEffect Color="#667eea" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                    </Grid.Effect>
                </Grid>

                <!-- Title -->
                <TextBlock Text="CMCS Portal" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#FFFFFF" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Contract Management &amp; Claims System" 
                           FontSize="16" 
                           Foreground="#94A3B8" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Feature List -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Ellipse Width="8" Height="8" Fill="#11998e" Margin="0,0,15,0"/>
                        <TextBlock Text="Secure Authentication" Foreground="#CBD5E1" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Ellipse Width="8" Height="8" Fill="#667eea" Margin="0,0,15,0"/>
                        <TextBlock Text="Role-Based Access" Foreground="#CBD5E1" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Ellipse Width="8" Height="8" Fill="#38ef7d" Margin="0,0,15,0"/>
                        <TextBlock Text="Modern Interface" Foreground="#CBD5E1" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Right Side - Forms -->
        <Grid Grid.Column="1" Background="#0F172A">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Navigation Tabs -->
            <Border Grid.Row="0" Background="#1E293B" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15">
                    <Button Name="btnSwitchToLogin" 
                            Content="Sign In" 
                            Style="{StaticResource NavTab}"
                            Click="BtnSwitchToLogin_Click"/>
                    <Button Name="btnSwitchToRegister" 
                            Content="Register" 
                            Style="{StaticResource NavTab}"
                            Click="BtnSwitchToRegister_Click"/>
                    <Button Name="btnSwitchToReset" 
                            Content="Reset" 
                            Style="{StaticResource NavTab}"
                            Click="BtnSwitchToReset_Click"/>
                </StackPanel>
            </Border>

            <!-- Forms Container -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="40,0">
                <Grid MinHeight="400">

                    <!-- LOGIN FORM -->
                    <StackPanel Name="LoginPanel" MaxWidth="350">
                        <TextBlock Text="Welcome Back" 
                                   FontSize="26" 
                                   FontWeight="Light" 
                                   Foreground="#FFFFFF" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,8"/>
                        <TextBlock Text="Enter your credentials to continue" 
                                   FontSize="13" 
                                   Foreground="#64748B" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,40"/>

                        <TextBlock Text="EMAIL ADDRESS" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,0,0,5"/>
                        <TextBox Name="txtLoginEmail" 
                                 Style="{StaticResource ModernInput}"
                                 Text="manager@cmcs.com"/>

                        <TextBlock Text="PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <PasswordBox Name="txtLoginPassword" 
                                     Style="{StaticResource ModernPassword}"/>

                        <Button Name="btnLogin" 
                                Content="SIGN IN" 
                                Style="{StaticResource GlassButton}"
                                Margin="0,30,0,20"
                                Click="BtnLogin_Click"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="Need an account? " Foreground="#64748B" FontSize="12"/>
                            <TextBlock Foreground="#667eea" FontSize="12" Cursor="Hand" 
                                       MouseLeftButtonDown="LinkToRegister_Click">
                                <Run Text="Register here"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <TextBlock Text="Forgot password? " Foreground="#64748B" FontSize="12"/>
                            <TextBlock Foreground="#EF4444" FontSize="12" Cursor="Hand" 
                                       MouseLeftButtonDown="LinkToReset_Click">
                                <Run Text="Reset here"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- REGISTER FORM -->
                    <StackPanel Name="RegisterPanel" MaxWidth="350" Visibility="Collapsed">
                        <TextBlock Text="Create Account" 
                                   FontSize="26" 
                                   FontWeight="Light" 
                                   Foreground="#FFFFFF" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,8"/>
                        <TextBlock Text="Join the claims management system" 
                                   FontSize="13" 
                                   Foreground="#64748B" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,30"/>

                        <TextBlock Text="FULL NAME" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,0,0,5"/>
                        <TextBox Name="txtRegisterName" Style="{StaticResource ModernInput}"/>

                        <TextBlock Text="EMAIL ADDRESS" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <TextBox Name="txtRegisterEmail" Style="{StaticResource ModernInput}"/>

                        <TextBlock Text="PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <PasswordBox Name="txtRegisterPassword" Style="{StaticResource ModernPassword}"/>

                        <TextBlock Text="CONFIRM PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <PasswordBox Name="txtConfirmPassword" Style="{StaticResource ModernPassword}"/>

                        <TextBlock Text="USER TYPE" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <ComboBox Name="cmbUserType" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="Lecturer" IsSelected="True"/>
                            <ComboBoxItem Content="Academic Manager"/>
                        </ComboBox>

                        <Button Name="btnRegister" 
                                Content="CREATE ACCOUNT" 
                                Style="{StaticResource GlassButton}"
                                Background="{StaticResource SecondaryGradient}"
                                Margin="0,25,0,20"
                                Click="BtnRegister_Click"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="Already registered? " Foreground="#64748B" FontSize="12"/>
                            <TextBlock Foreground="#667eea" FontSize="12" Cursor="Hand" 
                                       MouseLeftButtonDown="LinkToLogin_Click">
                                <Run Text="Sign in here"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- RESET PASSWORD FORM -->
                    <StackPanel Name="ResetPanel" MaxWidth="350" Visibility="Collapsed">
                        <TextBlock Text="Reset Password" 
                                   FontSize="26" 
                                   FontWeight="Light" 
                                   Foreground="#FFFFFF" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,8"/>
                        <TextBlock Text="Enter your details to reset password" 
                                   FontSize="13" 
                                   Foreground="#64748B" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,40"/>

                        <TextBlock Text="EMAIL ADDRESS" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,0,0,5"/>
                        <TextBox Name="txtResetEmail" Style="{StaticResource ModernInput}"/>

                        <TextBlock Text="NEW PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <PasswordBox Name="txtNewPassword" Style="{StaticResource ModernPassword}"/>

                        <TextBlock Text="CONFIRM NEW PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="SemiBold" 
                                   Foreground="#94A3B8" 
                                   Margin="0,15,0,5"/>
                        <PasswordBox Name="txtConfirmNewPassword" Style="{StaticResource ModernPassword}"/>

                        <Button Name="btnResetPassword" 
                                Content="UPDATE PASSWORD" 
                                Style="{StaticResource GlassButton}"
                                Margin="0,30,0,20"
                                Click="BtnResetPassword_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#EF4444" Offset="0"/>
                                    <GradientStop Color="#DC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <TextBlock Text="Remember password? " Foreground="#64748B" FontSize="12"/>
                            <TextBlock Foreground="#667eea" FontSize="12" Cursor="Hand" 
                                       MouseLeftButtonDown="LinkBackToLogin_Click">
                                <Run Text="Sign in here"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

            <!-- Status Message Area -->
            <Border Grid.Row="2" 
                    Name="MessagePanel"
                    Background="#DC2626" 
                    CornerRadius="6"
                    Margin="40,0,40,30"
                    Visibility="Collapsed"
                    MinHeight="45">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>
                <TextBlock Name="txtMessage" 
                           Foreground="White" 
                           FontWeight="Medium" 
                           FontSize="13"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Margin="20,0"/>
            </Border>

        </Grid>

    </Grid>
</Window>